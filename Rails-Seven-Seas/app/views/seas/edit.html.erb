<%= content_tag :div, class: "container" do %>
<%= form_for @sea do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <br>
  <br>
  <%= f.label :temperature %>
  <%= f.number_field :temperature, class: "form-control" %>
  <br>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio, class: "form-control" %>
  <br>
  <br>
  <%= f.label :image_url %>
  <%= f.text_field :image_url, class: "form-control" %>
  <br>
  <br>
  <%= f.label :mood %>
  <%= f.text_field :mood, class: "form-control" %>
  <br>
  <br>
  <%= f.label :favorite_color %>
  <%= f.text_field :favorite_color, class: "form-control" %>
  <br>
  <br>
  <%= f.label :scariest_creature %>
  <%= f.text_field :scariest_creature, class: "form-control" %>
  <br>
  <br>
  <%= f.label :has_mermaids %>
  <%= f.check_box :has_mermaids %>
  <br>
  <br>
  <%=  f.submit "Edit Sea", class: "form-control btn btn-info" %>

  <% end %>
<% end %>

<%= content_tag :div, class: "text-center row", style: "margin: 1em" do %>
  <%= button_to "All Seas",{ action: "index"}, method: "get", class: "btn btn-info", style: "margin: 0 auto"%>
   <br>
   <%= form_for @sea, method: :delete do |f| %>

   <%=  f.submit "Delete", class: "btn btn-info" %>


   <% end %>
  <% end %>
